{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Home Page</h1>

        {% if app.user %}
            <div class="alert alert-success">
                Connected with success, click <a href="{{ path('app_logout') }}">here</a> to logout
            </div>
        {% else %}
            <a href="{{ path('app_login') }}">Login</a>
        {% endif %}

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="{{ path('app_2fa_enable') }}" class="btn btn-primary">Enble 2fa</a>
            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">Mon espace</a>
        {% endif %}
    </div>
{% endblock %}